<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".activities.Home.ui.dashboard.SettingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/myCardView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:cardCornerRadius="150dp">

                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/hamburger"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProfileName"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="8dp"
                        android:text="Nguyen Thanh Tung"
                        android:textColor="@color/colorPurple"
                        android:gravity="bottom"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/txtProfileAccount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:hint="tungnt@gmail.com" />

                    <LinearLayout
                        android:id="@+id/llEditProfile"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="#D3D3D3"
                        android:clickable="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/colorPurple"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="10dp"
                android:background="@drawable/setting_bg"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/isNotification"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/txtNotifications"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:paddingLeft="30dp"
                        android:text="Notifications"
                        android:textSize="20dp"
                        android:textColor="@color/colorPurple"/>

                    <Switch
                        android:id="@+id/switchilly"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/setting_bg"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/isPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:paddingLeft="30dp"
                        android:text="Privacy"
                        android:textColor="@color/colorPurple"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/ibPrivacy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_navigate_next"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day la privacy cua app neeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/setting_bg"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/isPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:paddingLeft="30dp"
                        android:text="Policy"
                        android:textColor="@color/colorPurple"
                        android:textSize="20dp" />

                    <ImageButton
                        android:clickable="false"
                        android:id="@+id/ibPolicy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_navigate_next"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day la Policy cua app neeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/setting_bg"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/isApp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:paddingLeft="30dp"
                        android:text="App Version"
                        android:textColor="@color/colorPurple"
                        android:textSize="20dp" />

                    <ImageButton
                        android:clickable="false"
                        android:id="@+id/ibAppVersion"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_navigate_next"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtAppVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 3.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/setting_bg"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/isOut"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/txtSignOut"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:paddingLeft="30dp"
                        android:text="Sign out"
                        android:textColor="@color/colorPurple"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/ibSignOut"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:src="@drawable/exit_64px"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>