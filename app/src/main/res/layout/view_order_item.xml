<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearFoodItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgOrder"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/hamburger"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txtOrderQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:textColor="@color/colorPurple"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOrderItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Hamburgers"
                android:textColor="@color/colorPurple"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Chicken World"
                android:layout_marginTop="5dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="69 vinh ho"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txtOrderDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming in 25 minutes"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/txtDateCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1-12-2020"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtOrderStatus"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="Coming"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/order_coming"
            android:layout_marginTop="13dp" />

    </LinearLayout>

</LinearLayout>