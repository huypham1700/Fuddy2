<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.example.vietis_fuddy.Fragment.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/colorPurple"
            android:textSize="25dp"
            android:layout_marginStart="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="25dp"
            android:textColor="@color/colorYellow"
            android:layout_marginStart="80dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="150dp">

        <ImageButton
            android:id="@+id/ibAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hamburger"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:layout_marginTop="-100dp"
        android:layout_marginStart="28dp"
        android:background="@android:drawable/dialog_holo_light_frame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="140dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name "
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aaaa"
                        android:textSize="20dp"
                        android:textColor="@color/colorPurple"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp" />

                    <ImageButton
                        android:id="@+id/ibEditName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-40dp"
                        android:background="@drawable/ic_edit" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter New Name:"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtNewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aaaaaa"
                    android:textSize="15dp"
                    android:textColor="@color/colorPurple"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="right"
                     android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/btnSaveName"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="44dp"
                    android:text="Save"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Email "
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aaaa"
                        android:textSize="20dp"
                        android:textColor="@color/colorPurple"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp" />

                    <ImageButton
                        android:id="@+id/ibEditEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-40dp"
                        android:background="@drawable/ic_edit" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter New Email:"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtNewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aaaaaa"
                    android:textSize="15dp"
                    android:textColor="@color/colorPurple"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Password "
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aaaa"
                        android:textSize="20dp"
                        android:inputType="textPassword"
                        android:textColor="@color/colorPurple"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp" />

                    <ImageButton
                        android:id="@+id/ibEditPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-40dp"
                        android:background="@drawable/ic_edit" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Enter current password:"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="175dp"
                    android:text="aaaaaaaaaa"
                    android:textSize="15dp"
                    android:textColor="@color/colorPurple"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-35dp"
                    />

                <TextView
                    android:id="@+id/txtWhy"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/colorRed"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Enter new password:"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="155dp"
                    android:text="aaaaaaaaaa"
                    android:textSize="15dp"
                    android:textColor="@color/colorPurple"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Confirm password:"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="145dp"
                    android:text="aaaaaaaaaa"
                    android:textSize="15dp"
                    android:textColor="@color/colorPurple"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-35dp"
                    />

                <TextView
                    android:id="@+id/txtWhy1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/colorRed"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number "
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0934342324"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:textColor="@color/colorPurple"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp" />

                    <ImageButton
                        android:id="@+id/ibEditPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-40dp"
                        android:background="@drawable/ic_edit" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter New Phone Number:"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="13dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtNewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aaaaaa"
                    android:textSize="15dp"
                    android:textColor="@color/colorPurple"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="@color/colorPurple"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/fooddetail_bg"
                android:textSize="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
